{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'Id', 'r.id') }}</th>
            <th{% if pagination.isSorted('a.DateTime') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'RecordedAt', 'r.DateTime') }}
            </th>
            <th>{{ knp_pagination_sortable(pagination, 'Amount', ['r.Amount', 'r.DateTime']) }}</th>
        </tr>
        </thead>

        {% for record in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ record.id }}</td>
                <td>{{ record.recordedAt }}</td>
                <td>{{ record.amount }}</td>
            </tr>
        {% endfor %}
    </table>

    <div class="navigation">
    {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
